#include "stdafx.h"
#include "iostream"
#include "bitset"

using namespace std;

int _tmain(int argc, _TCHAR* argv[])
{
	unsigned int A;
	unsigned int i;
	cin >> A;
	cout << bitset<32>(A).to_string() << endl;
	cin >> i;
	unsigned int res;
	res = 1 << i;
	unsigned int _A = A | res;
	if (_A == A)
	{
		_A = _A & ~res;
	}
	cout << bitset<32>(_A).to_string() << endl;
	cout << _A << endl;
	system("pause");
	return 0;
}